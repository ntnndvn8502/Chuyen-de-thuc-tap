@model Simple.RestaurantModels.Register

@{
    ViewBag.Title = "Tạo nhà hàng mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Tạo nhà hàng mới</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="mx-1 my-4 row">
            <div class="col-md-2">Tên đăng nhập</div>
            <div class="col-md-5">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                <span style="color:red"> @ViewBag.error</span>
            </div>
        </div>

        <div class="mx-1 my-4 row">
            <div class="col-md-2">Mật khẩu</div>
            <div class="col-md-5">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="mx-1 my-4 row">
            <div class="col-md-2">
                Tên nhà hàng
            </div>

            <div class="col-md-5">
                @Html.EditorFor(model => model.RtrRealName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RtrRealName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mx-1 my-4 row">
            <div class="col-md-2">Tỉnh/ Thành phố</div>
            <div class="col-md-5">
                @*@Html.EditorFor(model => model.RtrCity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RtrCity, "", new { @class = "text-danger" })*@
                @Html.DropDownListFor(model => model.RtrCity, (IEnumerable<SelectListItem>)ViewBag.CityList, new { @class = "form-control" })

            </div>
        </div>

        <div class="mx-1 my-4 row">
            <div class="col-md-2">Địa chỉ</div>
            <div class="col-md-5">
                @Html.EditorFor(model => model.RtrAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RtrAddress, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="mx-1 my-4 row">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" value="Tạo" class="btn btn-danger" />
            </div>
            <div class="my-4">
                @Html.ActionLink("Trở về", "Index")
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


