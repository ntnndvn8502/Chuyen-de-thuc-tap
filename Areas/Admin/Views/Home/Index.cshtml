
@{
    ViewBag.Title = "Trang chủ";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/bootstrap-5.3.3-dist/css/bootstrap.min.css" />
    <script src="~/bootstrap-5.3.3-dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    <link href="~/Content/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/manage.css" />
</head>
<body>

    <nav class="navbar fixed-top navbar-expand-lg ">
        <div class="container navbar">
            <div>
                <a class="navbar-brand" href="/Admin/Home">
                    <img class="d-inline-block" src="@Url.Content("~/Content/Images/437732294_856382496249826_4084571687998732329_n.png")" height="35" />
                    <span style="color:white"> &nbsp;Admin</span>
                </a>

            </div>
            <div class="nav-account">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="nav-item">
                        <a class="nav-link" href="/Account/Logout">Đăng xuất</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link">
                            Hello @User.Identity.Name
                        </a>


                    </div>
                }

            </div>





        </div>
    </nav>

    <div style="margin-top:80px" class="container p-5 bg-white">
        <h2>Trang chủ quản trị</h2>
        <br /><br />
              <div class="d-flex justify-content-center gap-5">
                  <a href="/Admin/Orders/Index" class="text-decoration-none">
                      <div class="box">
                          <h3 class="text-black ">Quản lí đơn hàng</h3>

                      </div>
                  </a>
                  <a href="/Admin/Restaurants/Index" class="text-decoration-none">
                      <div class="box">
                          <h3 class="text-black ">Quản lí nhà hàng</h3>

                      </div>
                  </a>
                  <a href="/Admin/User/Index" class="text-decoration-none">
                      <div class="box">
                          <h3 class="text-black ">Quản lí tài khoản khách hàng</h3>

                      </div>
                  </a>

              </div>
    </div>


    @Scripts.Render("~/bundles/jquery")


    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    <script src="~/Scripts/Clock.js"></script>
    <script src="~/Scripts/script.js"></script>
    <script src="~/Scripts/Filter.js"></script>

</body>
</html>


