@model IEnumerable<Simple.Identity.AppUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lí tài khoản nhà hàng</h2><br />

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-7">         
            <input type="text" class="form-control" id="textSearch" placeholder="Tìm kiếm"/>     
        </div>
    </div><br />
    @Html.ActionLink("Thêm tài khoản", "Register", new {}, new { @class = "btn btn-danger" })
</div>
<br />
<table class="table">
    <tr>
        <th>Tên tài khoản</th>
        <th>ID nhà hàng</th>
        <th>Tên nhà hàng</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td>@item.RtrID</td>
            <td>@item.Restaurant.RtrRealName</td>
            <td>
                <a href="" data-bs-toggle="modal" data-bs-target="#modal@(item.RtrID)">Xóa</a>
                <div style="margin-top:200px" class="modal fade" id="modal@(item.RtrID)" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">

                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Bạn chắc chắn muốn xóa nhà hàng này chứ?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
        
    }

</table>