@model Simple.RestaurantModels.Register

@{
    ViewBag.Title = "Register";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Thêm tài khoản nhà hàng</h2>


@using (Html.BeginForm())
