
@{
    ViewBag.Title = "Trang chủ nhà hàng";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/bootstrap-5.3.3-dist/css/bootstrap.min.css" />
    <script src="~/bootstrap-5.3.3-dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    <link href="~/Content/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/manage.css" />
    



</head>
<body>
    <nav class="navbar fixed-top navbar-expand-lg ">
        <div class="container navbar">
            <div>
                <a class="navbar-brand" href="/Restaurants/Home">
                    <img class="d-inline-block" src="@Url.Content("~/Content/Images/437732294_856382496249826_4084571687998732329_n.png")" height="35" />
                    <span style="color:white">&nbsp; Nhà hàng</span>
                </a>
            </div>
            <div class="nav-account">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="nav-item">
                        <a class="nav-link" href="/Account/Logout">Đăng xuất</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link">
                            Hello @User.Identity.Name
                        </a>


                    </div>
                }

            </div>





        </div>
    </nav>
    <div style="margin-top:80px" class="container p-5 bg-white">
        <h2>Nhà hàng @ViewBag.Name</h2>
        <h3>@ViewBag.Address, @ViewBag.City</h3>
        <br />

        @if (ViewBag.inactive == false)
        {
            <div style="width:650px" class="box_ls">
                <span>Nhà hàng đang hoạt động bình thường</span>
                @Html.ActionLink("Tạm dừng nhận đơn", "Inactive", "Home", new { id = true }, new { @class = "btn btn-danger ms-3" })
            </div>
        }


        @if (ViewBag.inactive == true)
        {
                <div style="width:650px" class="box_ls">
                    <span>Nhà hàng đang tạm dừng nhận đơn</span>
                    @Html.ActionLink("Nhận đơn trở lại", "Inactive", "Home", new { id = false }, new { @class = "btn btn-danger ms-3" })
                </div>
                }
            <br />
            <div class="d-flex justify-content-center gap-5">
                <a href="/Restaurants/Orders/Waiting" class="text-decoration-none">
                    <div class="box rtr">
                        <h3 class="text-black ">Đơn hàng đang chờ</h3><br />
                        <div class="NoOrder_large">@ViewBag.Waiting</div>
                    </div>
                </a>
                <a href="/Restaurants/Orders/Received" class="text-decoration-none">
                    <div class="box rtr">
                        <h3 class="text-black ">Đơn hàng đã nhận</h3><br />
                        <div class="NoOrder_large">@ViewBag.Received</div>

                    </div>
                </a>
                <a href="/Restaurants/Orders/History" class="text-decoration-none">
                    <div class="box rtr">
                        <h3 class="text-black ">Lịch sử đơn hàng</h3>
                    </div>
                </a>
                

            </div>
        <br /><br />
            <div class="d-flex justify-content-center gap-5">
                <a href="/Restaurants/Orders/Review" class="text-decoration-none">
                    <div class="box rtr">
                        <h3 class="text-black ">Xem đánh giá & bình luận </h3>
                    </div>
                </a>
                <a href="/Restaurants/Page/Edit" class="text-decoration-none">
                    <div class="box rtr">
                        <h3 class="text-black ">Chỉnh sửa trang giới thiệu </h3>
                    </div>
                </a>
            </div>
        </div>


    @Scripts.Render("~/bundles/jquery")

   
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    <script src="~/Scripts/Clock.js"></script>
    <script src="~/Scripts/script.js"></script>
    <script src="~/Scripts/CKeditor.js"></script>
    <script src="~/Scripts/Filter.js"></script>

</body>
</html>



