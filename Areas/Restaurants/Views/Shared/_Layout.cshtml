<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/bootstrap-5.3.3-dist/css/bootstrap.min.css" />
    <script src="~/bootstrap-5.3.3-dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    <link href="~/Content/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/manage.css" />
    <script src="https://cdn.ckeditor.com/ckeditor5/41.3.1/classic/ckeditor.js"></script>





</head>
<body>
    <nav class="navbar fixed-top navbar-expand-lg ">
        <div class="container navbar">
            <div>
                <a class="navbar-brand" href="/Restaurants/Home">
                    <img class="d-inline-block" src="@Url.Content("~/Content/Images/437732294_856382496249826_4084571687998732329_n.png")" height="35" />
                    <span style="color:white">&nbsp; Nhà hàng</span>
                </a>
            </div>
            <div class="nav-account">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="nav-item">
                        <a class="nav-link" href="/Account/Logout">Đăng xuất</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link">
                            Hello @User.Identity.Name
                        </a>


                    </div>
                }

            </div>





        </div>
    </nav>
    <div style="margin-top:80px" class="container">
        <div class="row position-relative">
            <div class="col-lg-2 ps-0">
                <div class=" sidebar">

                    <div class="sidebar-item pe-2">
                        @Html.ActionLink("Đơn hàng đang chờ", "Waiting", "Orders", new { }, new { @class = "nav-link p-2 ps-3" })
                        <div class="NoOrder">@ViewBag.waiting</div>
                    </div>
                    <div class="sidebar-item pe-2">
                        @Html.ActionLink("Đơn hàng đã nhận", "Received", "Orders", new { }, new { @class = "nav-link  p-2 ps-3" })
                        <div class="NoOrder">@ViewBag.received</div>
                    </div>
                    <div class="sidebar-item">
                        @Html.ActionLink("Lịch sử đơn hàng", "History", "Orders", new { }, new { @class = "nav-link p-2 px-3" })
                    </div>
                    <div class="sidebar-item">
                        @Html.ActionLink("Đánh giá & bình luận ", "Review", "Orders", new { }, new { @class = "nav-link p-2 px-3" })
                    </div>
                    <div class="sidebar-item border-bottom-0">
                        @Html.ActionLink("Chỉnh sửa trang giới thiệu ", "Edit", "Page", new { }, new { @class = "nav-link p-2 px-3" })
                    </div>
                </div>

            </div>

            <div class="col-lg-10 p-4 main">
                @RenderBody()
            </div>
        </div>
    </div>
    

    @Scripts.Render("~/bundles/jquery")

    @RenderSection("scripts", required: false)
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    <script src="~/Scripts/Clock.js"></script>
    <script src="~/Scripts/script.js"></script>
    <script src="~/Scripts/CKeditor.js"></script>
    <script src="~/Scripts/Filter.js"></script>

</body>
</html>
